########################
# custom zsh functions #
########################

# general utilites
function mkcd(){
  mkdir -p "$@" && eval cd "\"\$$#\"";
}
# nix
function nurl-to-null(){
  nurl $1 $2 2>/dev/null
}
function rebuild-host(){
    sudo nixos-rebuild switch --flake $HOME/nix-nixos#$1
}
function rollback-host(){
    sudo nixos-rebuild switch --rollback --flake $HOME/nix-nixos#$1
}
